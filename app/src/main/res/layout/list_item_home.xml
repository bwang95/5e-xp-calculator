<?xml version="1.0" encoding="utf-8"?>
<com.cerridan.androidtemplate.ui.listitem.home.HomeListItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin"
    android:background="?attr/selectableItemBackground"
    tools:parentTag="com.cerridan.androidtemplate.ui.listitem.home.HomeListItemView"
    >

  <TextView
      android:id="@+id/tv_home_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|start"
      tools:text="Title"
      />

  <TextView
      android:id="@+id/tv_home_item_data"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|end"
      tools:text="Data"
      />

</com.cerridan.androidtemplate.ui.listitem.home.HomeListItemView>