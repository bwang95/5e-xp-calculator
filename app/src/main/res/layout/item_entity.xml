<?xml version="1.0" encoding="utf-8"?>
<com.cerridan.dndxpcalc.ui.EntityItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin"
    android:background="?attr/selectableItemBackground"
    >

  <TextView
      android:id="@+id/tv_entity_item_quantity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="2"
      />

  <TextView
      android:id="@+id/tv_entity_item_value"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:minWidth="@dimen/min_value_width"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="100,000"
      />

  <TextView
      android:id="@+id/tv_entity_item_value_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/default_margin"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/tv_entity_item_value"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="XP"
      />

</com.cerridan.dndxpcalc.ui.EntityItemView>